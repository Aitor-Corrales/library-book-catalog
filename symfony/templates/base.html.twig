        </article>
    </header>
    <section class="body">
        <article class="body__alerts"></article>
        <article class="body__content">
            {% block search %}
                <article class="body__content__page__search">
                    <form class="search_form" action="{{ path('search') }}" method="get">
                        <input class="input input--search" name="searchTerm" type="text"
                               placeholder="Type here what you're searching for...">
                        <button class="search_form__button--search button button--search" type="submit">
