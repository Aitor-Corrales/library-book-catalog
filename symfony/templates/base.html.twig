<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Library Hall</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('global_styles') }}
        {{ encore_entry_link_tags('reset_styles') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app_js') }}
    {% endblock %}
</head>
<body>
{% block all %}
    <header class="header">
        <article class="header__library_icon"></article>
        <nav class="header__navigation">
            <ol class="navigation__list">
                <li>first nav</li>
                <li>second nav</li>
                <li>third nav</li>
                <li>fourth nav</li>
            </ol>
        </nav>
