{% extends 'base.html.twig' %}
{% block title %}Authors{% endblock %}
{% block actions %}
    <a class="link_to_button button--primary" href="{{ path('createOrUpdateAuthor') }}">Create</a>
{% endblock %}

{% block body_content %}
    <ul class="list author_list">
        {% for author in authors %}
            <li class="list__element author_list__author_work author_work">
                <span class="author_work__name">
                    <a href="{{ path('author', {id: author.id}) }}">{{ author.name }}</a>
                </span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}