{% extends 'base.html.twig' %}
{% block title %}Tags{% endblock %}
{% block actions %}
    <a class="link_to_button button--primary" href="{{ path('createOrUpdateTag') }}">Create</a>
{% endblock %}
{% block body_content %}
    <ul class="list tag_list">
        {% for tag in tags %}
            <li class="list__element tag_list__tag tag">
                <span class="tag__name">
                    <a href="{{ path('tag', {id: tag.id}) }}">{{ tag.name }}</a>
                </span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}