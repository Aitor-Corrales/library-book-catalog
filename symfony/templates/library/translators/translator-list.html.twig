{% extends 'base.html.twig' %}
{% block title %}Translators{% endblock %}
{% block actions %}
    <a class="link_to_button button--primary" href="{{ path('createOrUpdateTranslator') }}">Create</a>
{% endblock %}
{% block body_content %}
    <ul class="list translator_list">
        {% for translator in translators %}
            <li class="list__element translator_list__translator_work translator_work">
                <span class="translator_work__name">
                    <a href="{{ path('translator', {id: translator.id}) }}">{{ translator.name }}</a>
                </span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}